# ====================================
# ãƒ‘ã‚¿ãƒ¼ãƒ³1: PEP 257 ã‹ã‚‰æ›¸ãæ›ãˆ
# ====================================

print("="*70)
print("ã€ãƒ‘ã‚¿ãƒ¼ãƒ³1ã€‘PEP 257 â†’ ä»–ã®4è¨˜æ³•ã¸æ›¸ãæ›ãˆ")
print("="*70)

# ----- å…ƒ: PEP 257 -----
def calc_original_pep(x, y):
    """2ã¤ã®æ•°ã‚’è¶³ã—ç®—ã™ã‚‹ã€‚"""
    # ã€ã“ã®é–¢æ•°ã®ç›®çš„ã€‘
    # - 2ã¤ã®æ•´æ•°ã‚’å—ã‘å–ã‚‹
    # - è¶³ã—ç®—ã™ã‚‹
    # - çµæœã‚’è¿”ã™
    
    print(f"  [PEP257å…ƒ] å®Ÿè¡Œ: {x} + {y}")  # ãƒ‡ãƒãƒƒã‚°
    result = x + y  # è¨ˆç®—
    print(f"  [PEP257å…ƒ] çµæœ: {result}")  # ãƒ‡ãƒãƒƒã‚°
    return result


print("\n--- PEP 257 â†’ Google ã¸ã®æ›¸ãæ›ãˆ ---")
def calc_pep_to_google(x, y):
    """
    2ã¤ã®æ•°ã‚’è¶³ã—ç®—ã™ã‚‹ã€‚
    
    Args:
        x (int): 1ã¤ç›®ã®æ•°
        y (int): 2ã¤ç›®ã®æ•°
    
    Returns:
        int: x + y ã®çµæœ
    """
    # ã€æ›¸ãæ›ãˆå†…å®¹ã€‘
    # PEP 257: """2ã¤ã®æ•°ã‚’è¶³ã—ç®—ã™ã‚‹ã€‚"""
    #    â†“
    # Google: æ¦‚è¦ + Args + Returns
    
    print(f"  [Googleç‰ˆ] å®Ÿè¡Œ: {x} + {y}")
    print(f"  [Googleç‰ˆ] å¼•æ•°x={x}, y={y} ã‚’è¶³ã—ç®—")
    result = x + y
    print(f"  [Googleç‰ˆ] çµæœ: {result}")
    print(f"  [æ›¸ãæ›ãˆæˆåŠŸ] PEP 257 â†’ Google")
    return result


print("\n--- PEP 257 â†’ NumPy ã¸ã®æ›¸ãæ›ãˆ ---")
def calc_pep_to_numpy(x, y):
    """
    2ã¤ã®æ•°ã‚’è¶³ã—ç®—ã™ã‚‹ã€‚
    
    Parameters
    ----------
    x : int
        1ã¤ç›®ã®æ•°
    y : int
        2ã¤ç›®ã®æ•°
    
    Returns
    -------
    int
        x + y ã®çµæœ
    """
    # ã€æ›¸ãæ›ãˆå†…å®¹ã€‘
    # PEP 257: """2ã¤ã®æ•°ã‚’è¶³ã—ç®—ã™ã‚‹ã€‚"""
    #    â†“
    # NumPy: æ¦‚è¦ + Parameters + ãƒã‚¤ãƒ•ãƒ³ + Returns
    
    print(f"  [NumPyç‰ˆ] å®Ÿè¡Œ: {x} + {y}")
    print(f"  [NumPyç‰ˆ] Parameterså½¢å¼ã§å¼•æ•°ã‚’è¨˜è¿°")
    result = x + y
    print(f"  [NumPyç‰ˆ] çµæœ: {result}")
    print(f"  [æ›¸ãæ›ãˆæˆåŠŸ] PEP 257 â†’ NumPy")
    return result


print("\n--- PEP 257 â†’ reST ã¸ã®æ›¸ãæ›ãˆ ---")
def calc_pep_to_rest(x, y):
    """
    2ã¤ã®æ•°ã‚’è¶³ã—ç®—ã™ã‚‹ã€‚
    
    :param x: 1ã¤ç›®ã®æ•°
    :type x: int
    :param y: 2ã¤ç›®ã®æ•°
    :type y: int
    :return: x + y ã®çµæœ
    :rtype: int
    """
    # ã€æ›¸ãæ›ãˆå†…å®¹ã€‘
    # PEP 257: """2ã¤ã®æ•°ã‚’è¶³ã—ç®—ã™ã‚‹ã€‚"""
    #    â†“
    # reST: æ¦‚è¦ + :param/:type + :return/:rtype
    
    print(f"  [reSTç‰ˆ] å®Ÿè¡Œ: {x} + {y}")
    print(f"  [reSTç‰ˆ] :param ã¨ :type ã§å¼•æ•°ã‚’2è¡Œãšã¤è¨˜è¿°")
    result = x + y
    print(f"  [reSTç‰ˆ] çµæœ: {result}")
    print(f"  [æ›¸ãæ›ãˆæˆåŠŸ] PEP 257 â†’ reST")
    return result


print("\n--- PEP 257 â†’ Epytext ã¸ã®æ›¸ãæ›ãˆ ---")
def calc_pep_to_epytext(x, y):
    """
    2ã¤ã®æ•°ã‚’è¶³ã—ç®—ã™ã‚‹ã€‚
    
    @param x: 1ã¤ç›®ã®æ•°
    @type x: int
    @param y: 2ã¤ç›®ã®æ•°
    @type y: int
    @return: x + y ã®çµæœ
    @rtype: int
    """
    # ã€æ›¸ãæ›ãˆå†…å®¹ã€‘
    # PEP 257: """2ã¤ã®æ•°ã‚’è¶³ã—ç®—ã™ã‚‹ã€‚"""
    #    â†“
    # Epytext: æ¦‚è¦ + @param/@type + @return/@rtype
    
    print(f"  [Epytextç‰ˆ] å®Ÿè¡Œ: {x} + {y}")
    print(f"  [Epytextç‰ˆ] @ è¨˜æ³•ã§è¨˜è¿°ï¼ˆãƒ¬ã‚¬ã‚·ãƒ¼ï¼‰")
    result = x + y
    print(f"  [Epytextç‰ˆ] çµæœ: {result}")
    print(f"  [æ›¸ãæ›ãˆæˆåŠŸ] PEP 257 â†’ Epytext")
    return result


# ãƒ†ã‚¹ãƒˆå®Ÿè¡Œ
print("\nâ–¼ ãƒ‘ã‚¿ãƒ¼ãƒ³1ã®ãƒ†ã‚¹ãƒˆå®Ÿè¡Œ")
x, y = 10, 5
print(f"å…¥åŠ›å€¤: x={x}, y={y}\n")

print("1-0. å…ƒã®PEP 257:")
calc_original_pep(x, y)

print("\n1-1. PEP 257 â†’ Google:")
calc_pep_to_google(x, y)

print("\n1-2. PEP 257 â†’ NumPy:")
calc_pep_to_numpy(x, y)

print("\n1-3. PEP 257 â†’ reST:")
calc_pep_to_rest(x, y)

print("\n1-4. PEP 257 â†’ Epytext:")
calc_pep_to_epytext(x, y)


