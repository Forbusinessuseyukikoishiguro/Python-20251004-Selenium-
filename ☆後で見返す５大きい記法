print("\n\n" + "="*70)
print("ã€ãƒ‘ã‚¿ãƒ¼ãƒ³3ã€‘NumPy â†’ ä»–ã®4è¨˜æ³•ã¸æ›¸ãæ›ãˆ")
print("="*70)

# ----- å…ƒ: NumPy -----
def calc_original_numpy(values):
    """
    ãƒªã‚¹ãƒˆã®çµ±è¨ˆã‚’è¨ˆç®—ã™ã‚‹ã€‚
    
    Parameters
    ----------
    values : list of float
        æ•°å€¤ã®ãƒªã‚¹ãƒˆ
    
    Returns
    -------
    mean : float
        å¹³å‡å€¤
    total : float
        åˆè¨ˆå€¤
    """
    # ã€ã“ã®é–¢æ•°ã®ç›®çš„ã€‘
    # - ãƒªã‚¹ãƒˆã‚’å—ã‘å–ã‚‹
    # - å¹³å‡ã¨åˆè¨ˆã‚’è¨ˆç®—
    # - ã‚¿ãƒ—ãƒ«ã§è¿”ã™
    
    print(f"  [NumPyå…ƒ] å®Ÿè¡Œ: values={values}")
    total = sum(values)
    mean = total / len(values)
    print(f"  [NumPyå…ƒ] åˆè¨ˆ={total}, å¹³å‡={mean}")
    return mean, total


print("\n--- NumPy â†’ PEP 257 ã¸ã®æ›¸ãæ›ãˆ ---")
def calc_numpy_to_pep(values):
    """ãƒªã‚¹ãƒˆã®çµ±è¨ˆã‚’è¨ˆç®—ã™ã‚‹ã€‚"""
    # ã€æ›¸ãæ›ãˆå†…å®¹ã€‘
    # NumPy: Parameters + ãƒã‚¤ãƒ•ãƒ³ + Returns
    #    â†“
    # PEP 257: æ¦‚è¦ã®ã¿
    
    print(f"  [PEP257ç‰ˆ] å®Ÿè¡Œ: values={values}")
    print(f"  [PEP257ç‰ˆ] è©³ç´°å‰Šé™¤ï¼ˆæ¦‚è¦ã®ã¿æ®‹ã™ï¼‰")
    
    total = sum(values)
    mean = total / len(values)
    print(f"  [PEP257ç‰ˆ] åˆè¨ˆ={total}, å¹³å‡={mean}")
    print(f"  [æ›¸ãæ›ãˆæˆåŠŸ] NumPy â†’ PEP 257")
    return mean, total


print("\n--- NumPy â†’ Google ã¸ã®æ›¸ãæ›ãˆ ---")
def calc_numpy_to_google(values):
    """
    ãƒªã‚¹ãƒˆã®çµ±è¨ˆã‚’è¨ˆç®—ã™ã‚‹ã€‚
    
    Args:
        values (list of float): æ•°å€¤ã®ãƒªã‚¹ãƒˆ
    
    Returns:
        tuple: (mean, total) ã®ã‚¿ãƒ—ãƒ«
            mean (float): å¹³å‡å€¤
            total (float): åˆè¨ˆå€¤
    """
    # ã€æ›¸ãæ›ãˆå†…å®¹ã€‘
    # NumPy: values : list of float (æ¬¡ã®è¡Œã«èª¬æ˜)
    #    â†“
    # Google: values (list of float): èª¬æ˜ï¼ˆ1è¡Œã«ã¾ã¨ã‚ã‚‹ï¼‰
    
    print(f"  [Googleç‰ˆ] å®Ÿè¡Œ: values={values}")
    print(f"  [Googleç‰ˆ] ãƒã‚¤ãƒ•ãƒ³å‰Šé™¤, 1è¡Œå½¢å¼ã«å¤‰æ›")
    
    total = sum(values)
    mean = total / len(values)
    print(f"  [Googleç‰ˆ] åˆè¨ˆ={total}, å¹³å‡={mean}")
    print(f"  [æ›¸ãæ›ãˆæˆåŠŸ] NumPy â†’ Google")
    return mean, total


print("\n--- NumPy â†’ reST ã¸ã®æ›¸ãæ›ãˆ ---")
def calc_numpy_to_rest(values):
    """
    ãƒªã‚¹ãƒˆã®çµ±è¨ˆã‚’è¨ˆç®—ã™ã‚‹ã€‚
    
    :param values: æ•°å€¤ã®ãƒªã‚¹ãƒˆ
    :type values: list of float
    :return: (mean, total) ã®ã‚¿ãƒ—ãƒ«
    :rtype: tuple
    """
    # ã€æ›¸ãæ›ãˆå†…å®¹ã€‘
    # NumPy: values : list of float (ãƒã‚¤ãƒ•ãƒ³ + ã‚¤ãƒ³ãƒ‡ãƒ³ãƒˆ)
    #    â†“
    # reST: :param values: + :type values: (2è¡Œå½¢å¼)
    
    print(f"  [reSTç‰ˆ] å®Ÿè¡Œ: values={values}")
    print(f"  [reSTç‰ˆ] ãƒã‚¤ãƒ•ãƒ³å‰Šé™¤, :param/:typeå½¢å¼")
    
    total = sum(values)
    mean = total / len(values)
    print(f"  [reSTç‰ˆ] åˆè¨ˆ={total}, å¹³å‡={mean}")
    print(f"  [æ›¸ãæ›ãˆæˆåŠŸ] NumPy â†’ reST")
    return mean, total


print("\n--- NumPy â†’ Epytext ã¸ã®æ›¸ãæ›ãˆ ---")
def calc_numpy_to_epytext(values):
    """
    ãƒªã‚¹ãƒˆã®çµ±è¨ˆã‚’è¨ˆç®—ã™ã‚‹ã€‚
    
    @param values: æ•°å€¤ã®ãƒªã‚¹ãƒˆ
    @type values: list of float
    @return: (mean, total) ã®ã‚¿ãƒ—ãƒ«
    @rtype: tuple
    """
    # ã€æ›¸ãæ›ãˆå†…å®¹ã€‘
    # reST: :param, :type, :return, :rtype
    #    â†“
    # Epytext: @param, @type, @return, @rtype
    
    print(f"  [Epytextç‰ˆ] å®Ÿè¡Œ: values={values}")
    print(f"  [Epytextç‰ˆ] : ã‚’ @ ã«ç½®ãæ›ãˆ")
    
    total = sum(values)
    mean = total / len(values)
    print(f"  [Epytextç‰ˆ] åˆè¨ˆ={total}, å¹³å‡={mean}")
    print(f"  [æ›¸ãæ›ãˆæˆåŠŸ] NumPy â†’ Epytext")
    return mean, total


# ãƒ†ã‚¹ãƒˆå®Ÿè¡Œ
print("\nâ–¼ ãƒ‘ã‚¿ãƒ¼ãƒ³3ã®ãƒ†ã‚¹ãƒˆå®Ÿè¡Œ")
values = [10.0, 20.0, 30.0]
print(f"å…¥åŠ›å€¤: values={values}\n")

print("3-0. å…ƒã®NumPy:")
calc_original_numpy(values)

print("\n3-1. NumPy â†’ PEP 257:")
calc_numpy_to_pep(values)

print("\n3-2. NumPy â†’ Google:")
calc_numpy_to_google(values)

print("\n3-3. NumPy â†’ reST:")
calc_numpy_to_rest(values)

print("\n3-4. NumPy â†’ Epytext:")
calc_numpy_to_epytext(values)


